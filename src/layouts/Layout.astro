---
import '../styles/global.css'
import Analytics from '../components/Analytics.astro';

export interface Props {
  title: string;
  description?: string;
  schema?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "Mobile surveillance trailer rentals throughout Tacoma and the Puget Sound region. Advanced video technology for construction sites, events, and temporary security needs.",
  schema,
  canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://www.cctvtrailer.com').href
} = Astro.props;

// Generate absolute URL for social media images
const siteURL = Astro.site || 'https://www.cctvtrailer.com';
const ogImageURL = new URL('/images/cctv-trailer-hero.png', siteURL).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="CCTV Trailer - Mobile Surveillance Solutions" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="CCTV Trailer" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    <meta property="twitter:image:alt" content="CCTV Trailer - Mobile Surveillance Solutions" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:site" content="@cctvtrailer" />
    <meta property="twitter:creator" content="@cctvtrailer" />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VBNN5TGJ7D"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      window.gtag = gtag;
      gtag('js', new Date());
      gtag('config', 'G-VBNN5TGJ7D');
    </script>
    
    {schema && <script type="application/ld+json" set:html={schema} />}
  </head>
  <body class="min-h-screen bg-white">
    <slot />
    
    <!-- Analytics Tracking Component -->
    <Analytics />
    
    <!-- Google Tag Manager (noscript) fallback -->
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-CCTV2024"
        height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
  </body>
</html>