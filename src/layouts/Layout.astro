---
import '../styles/critical.css';
import '../styles/non-critical.css';
// import '../styles/global.css';
import Analytics from '../components/Analytics.astro';
import OptimizedScripts from '../components/OptimizedScripts.astro';

export interface Props {
  title: string;
  description?: string;
  schema?: string | string[];
  canonicalURL?: string;
}

const { 
  title, 
  description = "Mobile surveillance trailer rentals throughout Tacoma and the Puget Sound region. Advanced video technology for construction sites, events, and temporary security needs.",
  schema,
  canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://www.cctvtrailer.com').href
} = Astro.props;

// Generate absolute URL for social media images
const siteURL = Astro.site || 'https://www.cctvtrailer.com';
const ogImageURL = new URL('/images/cctv-trailer-logo.png', siteURL).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Resource hints for faster connections -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />

    <!-- Favicons with cache busting -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2" />
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png?v=2" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=2" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" sizes="any"/>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=2" />
    <link rel="manifest" href="/site.webmanifest?v=2" />
    <meta name="theme-color" content="#dd1f26" />
    <meta name="msapplication-TileColor" content="#dd1f26" />

    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="CCTV Trailer - Mobile Surveillance Solutions" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="CCTV Trailer" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    <meta property="twitter:image:alt" content="CCTV Trailer - Mobile Surveillance Solutions" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:site" content="@CCTVTrailer" />
    <meta property="twitter:creator" content="@CCTVTrailer" />

    <!-- Defer Google Tag Manager to improve initial load -->
    
    {schema && (
      Array.isArray(schema) ? (
        schema.map((s) => <script type="application/ld+json" set:html={s} />)
      ) : (
        <script type="application/ld+json" set:html={schema} />
      )
    )}
  </head>
  <body class="min-h-screen bg-white">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5FPMNFLV"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <slot />
    
    <!-- Optimized Scripts and Analytics -->
    <OptimizedScripts />
    <Analytics />
  </body>
</html>