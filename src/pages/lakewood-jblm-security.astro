  <!-- Emergency Contact Bar -->
  <div class="bg-red-600 text-white py-2 text-center font-bold sticky top-0 z-50">
    📞 Lakewood/JBLM Security: <a href="tel:2536832288" class="underline">(253) 683-2288</a>
  </div>
  
  <Header currentPath="/lakewood-jblm-security" />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-indigo-800 to-indigo-900 text-white py-16">
