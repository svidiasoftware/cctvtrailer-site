import StatBox from '../components/StatBox.astro';
import SpeakableSchema from '../components/SpeakableSchema.astro';

// Speakable sections for voice search
const speakableSections = [
  { cssSelector: ".case-study h3, .case-study .results" },
  { cssSelector: ".stat-box" }
];

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Security Success Stories & Case Studies",
  "description": "Real-world case studies showing 200-400% ROI from mobile surveillance. Detailed savings analysis from construction, events, and commercial projects.",
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@type": "Case",
          "name": "Tacoma Mall Redevelopment",
          "description": "383% ROI preventing equipment theft"
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@type": "Case",
          "name": "Port of Tacoma Expansion",
          "description": "287% ROI with 24/7 surveillance"
        }
      },
      {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@type": "Case",
          "name": "Seattle Housing Development",
          "description": "350% ROI replacing security guards"
        }
      },
      {
        "@type": "ListItem",
        "position": 4,
        "item": {
          "@type": "Case",
          "name": "Puyallup Solar Farm",
          "description": "430% ROI preventing copper theft"
        }
      }
    ]
  }
});

// Breadcrumb data
const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Case Studies" }
];
