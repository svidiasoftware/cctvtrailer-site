    const siteSize = document.getElementById('siteSize');
    const siteType = document.getElementById('siteType');
    const unitsRequired = document.getElementById('unitsRequired');
    const coverageArea = document.getElementById('coverageArea');
    const dataUsage = document.getElementById('dataUsage');

    function calculateCoverage() {
      const size = parseFloat(siteSize.value) || 10;
      const type = siteType.value;

      let unitsNeeded = Math.ceil(size / 5); // Base: 1 unit per 5 acres
      let dataGB = 120; // Base data per unit

      // Adjust for site type
      if (type === 'construction') {
        unitsNeeded = Math.ceil(size / 5);
        dataGB = 120;
      } else if (type === 'parking') {
        unitsNeeded = Math.ceil(size / 8);
        dataGB = 100;
      } else if (type === 'warehouse') {
        unitsNeeded = Math.ceil(size / 10);
        dataGB = 80;
      } else if (type === 'event') {
        unitsNeeded = Math.ceil(size / 3);
        dataGB = 150;
      }

      const totalData = unitsNeeded * dataGB;

      unitsRequired.textContent = unitsNeeded;
      coverageArea.textContent = '100%';
      dataUsage.textContent = totalData + ' GB';
    }

    siteSize.addEventListener('input', calculateCoverage);
    siteType.addEventListener('change', calculateCoverage);

    calculateCoverage();
  </script>

