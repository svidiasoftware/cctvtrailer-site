    function assessVandalismRisk() {
      const visibility = parseInt(document.getElementById('visibility').value);
      const nightSecurity = parseInt(document.getElementById('night-security').value);
      const crimeLevel = parseInt(document.getElementById('crime-level').value);
      const projectType = parseInt(document.getElementById('project-type').value);
      const previousIncidents = parseInt(document.getElementById('previous-incidents').value);

      const totalRisk = visibility + nightSecurity + crimeLevel + projectType + previousIncidents;

      const resultsDiv = document.getElementById('risk-results');
      const levelDisplay = document.getElementById('risk-level-display');
      const descriptionDiv = document.getElementById('risk-description');
      const actionDiv = document.getElementById('risk-action');

      let level, description, action, colorClass, bgClass;

      if (totalRisk <= 8) {
        level = "LOW RISK";
        colorClass = "text-green-600";
        bgClass = "bg-green-50 border-2 border-green-200";
        description = "Your site has lower vandalism risk, but any incident can still cause significant damage and delays.";
        action = "<strong>Recommended:</strong> Single surveillance trailer for deterrence and insurance benefits.";
      } else if (totalRisk <= 12) {
        level = "MODERATE RISK";
        colorClass = "text-yellow-600";
        bgClass = "bg-yellow-50 border-2 border-yellow-200";
        description = "Your site faces significant vandalism risk. Statistics show 40% chance of incident without protection.";
        action = "<strong>Recommended:</strong> 2 surveillance trailers with 24/7 monitoring and audio deterrents.";
      } else if (totalRisk <= 16) {
        level = "HIGH RISK";
        colorClass = "text-orange-600";
        bgClass = "bg-orange-50 border-2 border-orange-200";
        description = "Your site is a prime vandalism target. 70% probability of attack, especially on weekends.";
        action = "<strong>Urgent:</strong> Deploy 2-3 surveillance trailers immediately with active monitoring and response.";
      } else {
        level = "CRITICAL RISK";
        colorClass = "text-red-600";
        bgClass = "bg-red-50 border-2 border-red-200";
        description = "Your site WILL be vandalized without immediate protection. Multiple incidents likely.";
        action = "<strong>CRITICAL:</strong> Comprehensive surveillance needed TODAY. Every day of delay increases risk.";
      }

      levelDisplay.textContent = level;
      levelDisplay.className = `text-2xl font-bold mb-4 ${colorClass}`;
      descriptionDiv.textContent = description;
      actionDiv.innerHTML = action;
      resultsDiv.className = `mt-8 p-6 rounded-lg ${bgClass}`;
      resultsDiv.classList.remove('hidden');
    }
  </script>
