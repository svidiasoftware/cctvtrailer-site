import ServiceSchema from '../../components/ServiceSchema.astro';
import BreadcrumbSchema from '../../components/BreadcrumbSchema.astro';
import QuickAnswer from '../../components/QuickAnswer.astro';
import StatBox from '../../components/StatBox.astro';

const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Solutions", url: "/services" },
  { name: "Vandalism Prevention" }
];

const serviceSchemaData = {
  serviceName: "Construction Site Vandalism Prevention",
  description: "Stop vandalism and graffiti with 24/7 surveillance. Prevent $25,000+ damage costs and project delays. HD cameras, instant alerts, proven deterrence.",
  price: "7999",
  priceUnit: "MONTH" as const,
  areaServed: [
    { type: "State" as const, name: "Washington" },
    { type: "City" as const, name: "Tacoma" },
    { type: "City" as const, name: "Seattle" },
