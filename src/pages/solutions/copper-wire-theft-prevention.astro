---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTASection from '../../components/CTASection.astro';
import QuoteForm from '../../components/QuoteForm.astro';
import ServiceSchema from '../../components/ServiceSchema.astro';
import BreadcrumbSchema from '../../components/BreadcrumbSchema.astro';
import QuickAnswer from '../../components/QuickAnswer.astro';
import StatBox from '../../components/StatBox.astro';

const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Solutions", url: "/services" },
  { name: "Copper Wire Theft Prevention" }
];

const serviceSchemaData = {
  serviceName: "Copper Wire Theft Prevention System",
  description: "Stop copper theft with advanced surveillance. Copper prices at record highs driving theft epidemic. 24/7 monitoring prevents $50,000+ losses. Proven 90% reduction in metal theft.",
  price: "7999",
  priceUnit: "MONTH" as const,
  areaServed: [
    { type: "State" as const, name: "Washington" },
    { type: "City" as const, name: "Tacoma" },
    { type: "City" as const, name: "Seattle" },
    { type: "City" as const, name: "Olympia" }
  ]
};

const faqSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Why is copper wire theft so common?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Copper theft has surged due to record-high copper prices ($4.50+ per pound). Thieves can make $500-2,000 from a single theft, while causing $50,000+ in damages. Construction sites are prime targets with exposed wiring and materials."
      }
    },
    {
      "@type": "Question",
      "name": "How much does copper theft cost construction projects?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Average copper theft causes $50,000 in direct losses plus 2-4 weeks of delays. Total impact often exceeds $100,000 when including replacement costs, rewiring, project delays, and overtime labor."
      }
    },
    {
      "@type": "Question",
      "name": "How do surveillance systems prevent copper theft?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Surveillance trailers provide 24/7 monitoring of material storage areas, instant alerts for after-hours activity, and clear identification of thieves. Sites with surveillance see 90% reduction in copper theft."
      }
    }
  ]
});
---

<Layout
  title="Copper Wire Theft Prevention | Stop Metal Theft at Construction Sites"
  description="Prevent copper wire theft with proven surveillance solutions. $50,000+ average loss per incident. 24/7 monitoring stops thieves. 90% reduction guaranteed."
  schema={[faqSchema]}>

  <ServiceSchema {...serviceSchemaData} />
  <BreadcrumbSchema items={breadcrumbItems} />

  <Header showEmergencyBar={true} currentPath="/solutions/copper-wire-theft-prevention" />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-orange-800 to-orange-900 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl">
          <div class="bg-red-600 text-white inline-block px-4 py-2 rounded-lg font-bold mb-4">
            🚨 COPPER PRICES AT RECORD HIGH - THEFT SURGE WARNING
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Stop Copper Wire Theft Before It Destroys Your Timeline</h1>
          <p class="text-xl mb-6">Thieves make $2,000. You lose $50,000+ and weeks of delays. One night can devastate your entire project.</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="tel:2536832288" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg inline-block text-center">
              🚨 Emergency: (253) 683-2288
            </a>
            <a href="#copper-calculator" class="bg-white text-orange-900 hover:bg-gray-100 font-bold py-3 px-8 rounded-lg inline-block text-center">
