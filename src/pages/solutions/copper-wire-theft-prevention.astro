        <StatBox
          stats={[
            {
              value: "$4.50+",
              label: "Per Pound",
              icon: "💰",
              highlight: true
            },
            {
              value: "$50K+",
              label: "Average Loss",
              icon: "⚠️",
              highlight: false
            },
            {
              value: "500%",
              label: "Theft Increase",
              icon: "📈",
              highlight: false
            },
            {
              value: "3-4 Weeks",
              label: "Project Delays",
              icon: "⏱️",
              highlight: false
            }
          ]}
          className="max-w-5xl mx-auto mb-12"
        />

        <!-- Real Cost Breakdown -->
        <div class="bg-red-50 border-2 border-red-300 rounded-lg p-8 max-w-4xl mx-auto">
          <h3 class="text-2xl font-bold mb-6 text-red-900">True Cost of Copper Theft: Case Study</h3>

          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h4 class="font-bold text-lg mb-3 text-red-800">What Thieves Stole:</h4>
              <ul class="space-y-2">
                <li class="flex justify-between">
