  <script is:inline>
    function calculateRisk() {
      const equipmentValue = parseInt(document.getElementById('equipment-value').value);
      const locationRisk = parseInt(document.getElementById('location-risk').value);
      const currentSecurity = parseInt(document.getElementById('current-security').value);
      const pastTheft = parseInt(document.getElementById('past-theft').value);

      const totalRisk = equipmentValue + locationRisk + currentSecurity + pastTheft;
      const resultDiv = document.getElementById('risk-result');
      const levelDiv = document.getElementById('risk-level');
      const messageDiv = document.getElementById('risk-message');
      const recommendationDiv = document.getElementById('risk-recommendation');

      let level, message, recommendation, color;

      if (totalRisk <= 6) {
        level = "LOW RISK";
        color = "text-green-600";
        message = "Your site has lower theft risk, but surveillance still provides valuable protection and insurance benefits.";
        recommendation = "Recommended: Single surveillance trailer for deterrence and documentation.";
      } else if (totalRisk <= 10) {
        level = "MODERATE RISK";
        color = "text-yellow-600";
        message = "Your site faces significant theft risk. Without protection, you have a 40% chance of experiencing theft.";
        recommendation = "Recommended: 1-2 surveillance trailers with 24/7 monitoring for comprehensive coverage.";
      } else if (totalRisk <= 14) {
        level = "HIGH RISK";
        color = "text-orange-600";
        message = "Your site is a prime target for thieves. Statistics show 70% chance of theft without proper security.";
        recommendation = "Urgent: Deploy 2-3 surveillance trailers immediately. Consider additional physical security measures.";
      } else {
        level = "CRITICAL RISK";
        color = "text-red-600";
        message = "Your site is at extreme risk. Theft is not a matter of if, but when. Immediate action required.";
        recommendation = "CRITICAL: Deploy comprehensive surveillance system today. Every day of delay increases risk exponentially.";
      }

      levelDiv.textContent = level;
      levelDiv.className = `text-2xl font-bold mb-4 ${color}`;
      messageDiv.textContent = message;
      recommendationDiv.innerHTML = `<strong>${recommendation}</strong>`;

      resultDiv.classList.remove('hidden');
      if (totalRisk > 10) {
        resultDiv.className = 'mt-8 p-6 rounded-lg bg-red-50 border-2 border-red-200';
      } else if (totalRisk > 6) {
        resultDiv.className = 'mt-8 p-6 rounded-lg bg-yellow-50 border-2 border-yellow-200';
      } else {
        resultDiv.className = 'mt-8 p-6 rounded-lg bg-green-50 border-2 border-green-200';
      }
    }
  </script>
