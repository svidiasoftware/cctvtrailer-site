---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTASection from '../../components/CTASection.astro';
import QuoteForm from '../../components/QuoteForm.astro';
import ServiceSchema from '../../components/ServiceSchema.astro';
import BreadcrumbSchema from '../../components/BreadcrumbSchema.astro';
import QuickAnswer from '../../components/QuickAnswer.astro';
import StatBox from '../../components/StatBox.astro';
import LazyImage from '../../components/LazyImage.astro';

const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Solutions", url: "/services" },
  { name: "Equipment Theft Prevention" }
];

const serviceSchemaData = {
  serviceName: "Construction Equipment Theft Prevention Solution",
  description: "Prevent equipment theft with mobile surveillance. $1 billion in construction equipment stolen annually. 24/7 monitoring, instant alerts, proven 85% theft reduction.",
  price: "7999",
  priceUnit: "MONTH" as const,
  areaServed: [
    { type: "State" as const, name: "Washington" },
    { type: "City" as const, name: "Tacoma" },
    { type: "City" as const, name: "Seattle" },
    { type: "City" as const, name: "Olympia" }
  ]
};

const faqSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much construction equipment is stolen each year?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Over $1 billion worth of construction equipment is stolen annually in the US, with less than 25% ever recovered. The average theft costs contractors $30,000-50,000 in equipment value plus project delays."
      }
    },
    {
      "@type": "Question",
      "name": "What equipment is most commonly stolen from construction sites?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most commonly stolen equipment includes: skid steers, excavators, generators, tools, copper wire, lumber, and fuel. These items are targeted due to high resale value and difficulty tracking."
      }
    },
    {
      "@type": "Question",
      "name": "How do surveillance trailers prevent equipment theft?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Surveillance trailers deter theft through visible presence, motion-activated alerts, real-time monitoring, and recorded evidence. Studies show sites with surveillance experience 85% fewer theft incidents."
      }
    }
  ]
});
