      margin: 0 auto;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }

    .feature-card {
      background-color: #fff;
      border-radius: 8px;
      overflow: hidden;
