    }

    .feature-card-image {
      width: 100%;
      height: 200px;
      background-size: cover;
      background-position: center;
    }

    .feature-card-image.generator {
      background-image: url('/images/backup-generator.jpg');
    }

    .feature-card-image.computer {
      background-image: url('/images/onboard-computer.jpg');
    }

    .feature-card-image.storage {
      background-image: url('/images/video-storage.jpg');
    }

    .feature-card-image.radar {
      background-image: url('/images/radar-feature.jpg');
    }

    .feature-card-image.floodlights {
      background-image: url('/images/floodlights.jpeg');
    }

    .feature-card-image.license {
      background-image: url('/images/license-plate.jpg');
    }

    .feature-card-content {
      padding: 24px;
    }

    .feature-card-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 12px;
      color: #141414;
      text-transform: uppercase;
    }

    .feature-card-text {
      font-size: 14px;
      line-height: 1.6;
      color: #666;
    }

    /* Contact Section */
    .section-wrapper-contact {
      background-color: #ebebeb;
      background-image: url('/images/contact-bg.svg');
      background-repeat: no-repeat;
      background-position: 50% 101%;
      background-size: 105%;
      padding: 80px 0 0;
      min-height: 792px;
      display: flex;
      justify-content: center;
      align-items: flex-start;
    }

    .content-container-contact {
      max-width: 1200px;
      width: 100%;
      padding: 0 32px;
    }

    .content-wrapper-contact {
      display: flex;
      align-items: center;
      gap: 80px;
      padding: 80px 0;
    }

    .left-side-contact {
      flex: 1;
    }

    .heading-1 {
      font-size: 56px;
      font-weight: 600;
      line-height: 1.1;
      color: #141414;
      margin-bottom: 24px;
    }

    .text-span-yellow {
      color: #fbbf24;
    }

    .body-black-copy {
      font-size: 18px;
      line-height: 1.6;
      color: #666;
      margin-bottom: 32px;
      max-width: 450px;
    }

    .clear-outline-button {
      display: inline-block;
      background-color: transparent;
      color: #141414;
      border: 2px solid #141414;
      padding: 12px 32px;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      text-transform: uppercase;
      transition: all 0.3s;
      background-image: url('/images/red-arrow.svg');
      background-repeat: no-repeat;
      background-position: right 16px center;
      background-size: 16px;
      padding-right: 48px;
    }

    .clear-outline-button:hover {
      background-color: #141414;
      color: white;
    }

    .contact-image {
      width: 452px;
      height: 600px;
      background-image: url('/images/contact-image.jpg');
      background-size: cover;
      background-position: center;
      border-radius: 12px;
      flex-shrink: 0;
    }

    /* Responsive Design */
    @media (max-width: 991px) {
      .hero-heading {
        font-size: 42px;
      }

      .features-wrapper {
        grid-template-columns: 1fr;
      }

      .trailer-image-container {
        margin: 40px auto;
      }

      .about-wrapper {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .container-image-text,
      .container-image-text.reverse {
        flex-direction: column;
      }

      .audio-image,
      .remote-image {
        width: 100%;
      }

      .features-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .content-wrapper-contact {
        flex-direction: column;
      }

      .contact-image {
        width: 100%;
        height: 400px;
      }
    }

    @media (max-width: 767px) {
      .hero-heading {
        font-size: 32px;
      }

      .hero-paragraph {
        font-size: 16px;
      }

      .features-grid {
        grid-template-columns: 1fr;
      }

      .heading-1 {
        font-size: 40px;
      }
    }
  </style>
</Layout>