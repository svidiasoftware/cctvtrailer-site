    </section>

    <!-- Related Services & Applications Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Technology Applications & Services</h2>

        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          <!-- Service Applications -->
          <div>
            <h3 class="text-xl font-bold mb-6 text-gray-800">Where Our Technology Excels</h3>
            <div class="space-y-4">
              <a href="/construction-security" class="block bg-white border rounded-lg p-4 hover:shadow-lg transition-shadow">
                <h4 class="font-bold text-lg text-blue-700">Construction Site Security</h4>
                <p class="text-gray-600 text-sm mt-1">24/7 autonomous monitoring of equipment and materials</p>
              </a>
              <a href="/event-security" class="block bg-white border rounded-lg p-4 hover:shadow-lg transition-shadow">
                <h4 class="font-bold text-lg text-blue-700">Event & Festival Surveillance</h4>
                <p class="text-gray-600 text-sm mt-1">Crowd monitoring with AI-powered analytics</p>
              </a>
              <a href="/emergency-surveillance" class="block bg-white border rounded-lg p-4 hover:shadow-lg transition-shadow">
                <h4 class="font-bold text-lg text-blue-700">Emergency Response</h4>
                <p class="text-gray-600 text-sm mt-1">Rapid deployment with self-powered operation</p>
              </a>
            </div>
