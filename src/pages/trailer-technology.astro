---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LazyImage from '../components/LazyImage.astro';
import CTASection from '../components/CTASection.astro';
import Analytics from '../components/Analytics.astro';
import ServiceSchema from '../components/ServiceSchema.astro';
import BreadcrumbSchema from '../components/BreadcrumbSchema.astro';

// Schema data for the construction security service
const serviceSchemaData = {
  serviceName: "Mobile Security Trailers Weekly Rentals",
  description: "Professional mobile security trailers with advanced video surveillance technology for the Pacific Northwest",
  price: "3499",
  highPrice: "4000",
  priceUnit: "WEEK" as const,
  areaServed: [
    { type: "State" as const, name: "Washington" },
    { type: "City" as const, name: "Tacoma" },
    { type: "City" as const, name: "Seattle" },
    { type: "City" as const, name: "Olympia" },
    { type: "City" as const, name: "Lakewood" },
    { type: "City" as const, name: "Auburn" },
    { type: "City" as const, name: "Federal Way" },
    { type: "City" as const, name: "Fife" },
    { type: "City" as const, name: "Bonney Lake" },
    { type: "City" as const, name: "Puyallup" }
  ]
};

// Breadcrumb data
const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Trailer Technology" }
];
---

<Layout
  title="Mobile Security Trailer Technology & Specifications | CCTV Trailers WA"
  description="Advanced mobile surveillance trailers built for Pacific Northwest weather. Solar-powered with generator backup, 360° PTZ cameras, AI detection, 30-day storage. See full specifications.">
  
  <ServiceSchema {...serviceSchemaData} />
  <BreadcrumbSchema items={breadcrumbItems} /> 

  <Header showEmergencyBar={true} currentPath="/trailer-technology" />
  <Analytics /> 

  <main>
    <!-- Hero Section -->
    <div class="hero-trailer">
      <div class="hero-overlay">
        <LazyImage src="/images/tacoma-dome-bg-hero3.webp" alt="Mobile security trailer technical specifications and features" 
        class="w-full h-full object-cover" width="1920" height="1080" fetchPriority="high" loading="eager" />
      </div>
      <div class="hero-content">
        <div class="hero-text-wrapper">
          <h1 class="hero-heading">TRAILER TECHNOLOGY</h1>
          <p class="hero-paragraph">
            <strong>Enterprise-grade mobile security trailers</strong> engineered for Washington State's demanding climate. <strong>Advanced surveillance technology, autonomous power systems, and intelligent analytics</strong> protect your assets <strong>24/7/365</strong>.
          </p>
        </div>
      </div>
    </div>

    <!-- Trailer Features Section -->
    <div class="section-trailer-features">
      <div class="features-wrapper">
        <div class="features-left">
          <div class="feature-block">
            <h2 class="feature-heading">CAMERAS</h2>
            <p class="feature-text">
              Each mobile security trailer features S-VIDIA AI-enabled 4K PTZ cameras with 30x optical zoom, infrared night vision up to 300 feet, and true 360-degree coverage for complete site surveillance.
            </p>
          </div>
          
          <div class="feature-block">
            <h3 class="feature-heading">SOLAR PANELS</h3>
            <p class="feature-text">
              2.4kW high-efficiency solar array with MPPT charge controller powers your surveillance system silently. Paired with our backup generator and optional shore power, ensuring 100% uptime through Pacific Northwest's 150+ cloudy days annually.
            </p>
          </div>

          <div class="feature-block">
            <h3 class="feature-heading">INSIDE SPECS</h3>
            <p class="feature-text">
              Intel i7 onboard computer with 32GB RAM runs S-VIDIA AI analytics locally. LiFePO4 battery bank (14.4kWh) with intelligent BMS ensures seamless power transitions. 8-16TB onboard storage captures 30+ days of 4K footage.
            </p>
          </div>
        </div>

        <div class="trailer-image-container">
          <div class="trailer-image"></div>
        </div>

        <div class="features-right">
          <div class="feature-block">
            <h3 class="feature-heading">ADJUSTABLE MAST</h3>
            <p class="feature-text">
              Electric or hydraulic telescoping mast extends 20-30 feet high, supporting up to four cameras for optimal coverage. Wind-rated to 80mph sustained, 100mph gusts - engineered for Washington State's severe weather events.
            </p>
          </div>

          <div class="feature-block">
            <h3 class="feature-heading">TRAILER</h3>
            <p class="feature-text">
              Reinforced steel construction with IP67 weatherproofing handles Pacific Northwest's rain and temperature extremes. DOT-compliant for easy transport throughout Washington State. Hitch lock, wheel locks, and GPS tracking prevent theft.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Video Technology Section -->
      <div class="section-videotec-svidia">
        <div class="svidia-wrapper-dark">
          <div class="content-container-copy">
            <h2 class="heading-2 white center">AI-POWERED VIDEO ANALYTICS</h2>
            <p class="body-white centered">
              S-VIDIA's next-generation AI platform delivers real-time threat detection, facial recognition, license plate reading, and intelligent alerts - processing everything locally for instant response.
            </p>
            <a href="/video-technology" class="red-button">
              Learn More
            </a>
          </div>
        </div>
      </div>

    <!-- Technology and Capabilities Section -->
    <div class="section-audio-remote">
      <div class="section-header">
        <h2 class="section-title">ADVANCED CAPABILITIES</h2>
        <p class="section-subtitle">
          Military-grade technology protecting Washington State businesses 24/7
        </p>
      </div>

      <div class="audio-remote-wrapper">
        <div class="container-image-text">
          <div class="audio-image"></div>
          <div class="content-container">
            <h3 class="section-heading">AUDIO DETERRENCE</h3>
            <p class="section-text">
              120dB PA speakers with pre-recorded and live audio warnings activate upon intrusion detection, enabling remote security teams to intervene immediately and prevent incidents before they occur.            </p>
          </div>
        </div>

        <div class="container-image-text reverse">
          <div class="remote-image"></div>
          <div class="content-container">
            <h3 class="section-heading">MULTI-PATH CONNECTIVITY</h3>
            <p class="section-text">
              Redundant connectivity through 5G/4G LTE (multi-carrier), Starlink satellite, and local WiFi ensures uninterrupted monitoring. Real-time HD streaming to anywhere worldwide.
            </p>
          </div>
        </div>

        <div class="container-image-text">
          <div class="power-image"></div>
          <div class="content-container">
            <h3 class="section-heading">THREE-WAY POWER SYSTEM</h3>
            <p class="section-text">
              100% autonomous operation with solar primary, generator backup, and optional shore power ensures continuous surveillance through Pacific Northwest's 150+ cloudy days annually.
              <br><a href="/trailer-standalone-hybrid-power-architecture" class="text-blue-600 hover:text-blue-800 font-semibold inline-block mt-2">Learn more →</a>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Detailed Technical Specifications Section -->
    <div class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Detailed Technical Specifications</h2>
          <p class="text-xl text-gray-600">Enterprise-grade mobile surveillance technology built for demanding environments</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <!-- Camera Specifications -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-blue-600">Camera Systems</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><span>Resolution</span><span class="font-semibold">2K/4K Ultra HD</span></li>
              <li class="flex justify-between"><span>PTZ Range</span><span class="font-semibold">360° pan, 90° tilt</span></li>
              <li class="flex justify-between"><span>Optical Zoom</span><span class="font-semibold">30x optical, 12x digital</span></li>
              <li class="flex justify-between"><span>Night Vision</span><span class="font-semibold">300ft IR range</span></li>
              <li class="flex justify-between"><span>Frame Rate</span><span class="font-semibold">30 fps @ 4K</span></li>
              <li class="flex justify-between"><span>Analytics</span><span class="font-semibold">AI-powered detection</span></li>
              <li class="flex justify-between"><span>Weather Rating</span><span class="font-semibold">IP67 waterproof</span></li>
            </ul>
          </div>

          <!-- Power Systems -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-green-600">Power Systems</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><span>Solar Panels</span><span class="font-semibold">2.4kW capacity</span></li>
              <li class="flex justify-between"><span>Battery Storage</span><span class="font-semibold">14.4 kWh LiFePO4</span></li>
              <li class="flex justify-between"><span>Runtime</span><span class="font-semibold">72-96 hours</span></li>
              <li class="flex justify-between"><span>Generator</span><span class="font-semibold">2.8kW backup</span></li>
              <li class="flex justify-between"><span>AC Input</span><span class="font-semibold">110V compatible</span></li>
              <li class="flex justify-between"><span>Charge Controller</span><span class="font-semibold">MPPT technology</span></li>
              <li class="flex justify-between"><span>UPS Function</span><span class="font-semibold">&lt; 10ms switchover</span></li>
            </ul>
          </div>

          <!-- Connectivity -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-purple-600">Connectivity</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><span>Cellular</span><span class="font-semibold">5G/4G LTE</span></li>
              <li class="flex justify-between"><span>Carriers</span><span class="font-semibold">Multi-carrier SIM</span></li>
              <li class="flex justify-between"><span>Satellite</span><span class="font-semibold">Starlink ready</span></li>
              <li class="flex justify-between"><span>WiFi</span><span class="font-semibold">802.11ac dual-band</span></li>
              <li class="flex justify-between"><span>Ethernet</span><span class="font-semibold">Gigabit ports</span></li>
              <li class="flex justify-between"><span>Bandwidth</span><span class="font-semibold">150 Mbps capable</span></li>
              <li class="flex justify-between"><span>Encryption</span><span class="font-semibold">AES-256 SSL/TLS</span></li>
            </ul>
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Physical Specifications -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-orange-600">Physical Specs</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><span>Mast Height</span><span class="font-semibold">20-30 feet</span></li>
              <li class="flex justify-between"><span>Trailer Size</span><span class="font-semibold">6x10 feet</span></li>
              <li class="flex justify-between"><span>Weight</span><span class="font-semibold">3,500 lbs</span></li>
              <li class="flex justify-between"><span>Towing</span><span class="font-semibold">2" ball hitch</span></li>
              <li class="flex justify-between"><span>Stabilizers</span><span class="font-semibold">4-point leveling</span></li>
              <li class="flex justify-between"><span>Construction</span><span class="font-semibold">Reinforced steel</span></li>
              <li class="flex justify-between"><span>Wind Rating</span><span class="font-semibold">80 mph sustained</span></li>
            </ul>
          </div>

          <!-- Storage & Processing -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-red-600">Storage & Processing</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><span>Onboard Storage</span><span class="font-semibold">8-16 TB</span></li>
              <li class="flex justify-between"><span>Recording</span><span class="font-semibold">14-30+ days @ 4K</span></li>
              <li class="flex justify-between"><span>Processor</span><span class="font-semibold">Intel i7</span></li>
              <li class="flex justify-between"><span>RAM</span><span class="font-semibold">32 GB DDR4</span></li>
              <li class="flex justify-between"><span>GPU</span><span class="font-semibold">AI ready</span></li>
              <li class="flex justify-between"><span>Redundancy</span><span class="font-semibold">Optional RAID 1</span></li>
              <li class="flex justify-between"><span>Cloud Backup</span><span class="font-semibold">Optional</span></li>
            </ul>
          </div>

          <!-- Detection & Analytics -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-indigo-600">Detection Systems</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><span>Motion Detection</span><span class="font-semibold">AI-enhanced</span></li>
              <li class="flex justify-between"><span>Object Classification</span><span class="font-semibold">Person/Vehicle/Animal</span></li>
              <li class="flex justify-between"><span>Facial Recognition</span><span class="font-semibold">Optional</span></li>
              <li class="flex justify-between"><span>License Plate</span><span class="font-semibold">Custom-developed LPR</span></li>
              <li class="flex justify-between"><span>Thermal Imaging</span><span class="font-semibold">Optional FLIR</span></li>
              <li class="flex justify-between"><span>Radar Range</span><span class="font-semibold">400+ feet</span></li>
              <li class="flex justify-between"><span>Audio Analytics</span><span class="font-semibold">Gunshot detection</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Features and Benefits Section -->
    <div class="features-benefits-section">
      <div class="features-benefits-wrapper">
        <div class="section-header">
          <h2 class="section-title">FEATURES AND BENEFITS</h2>
          <p class="section-subtitle">
            Learn more about the features making CCTV Trailer the best local mobile surveillance trailer provider.
          </p>
        </div>

        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-card-image generator"></div>
            <div class="feature-card-content">
              <h3 class="feature-card-title">Backup Generator</h3>
              <p class="feature-card-text">
                CCTV Trailer units are equipped with an intelligent battery management system and backup generator, providing a seamless transition between power sources mid-recording.
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-card-image computer"></div>
            <div class="feature-card-content">
              <h3 class="feature-card-title">ONBOARD COMPUTER</h3>
              <p class="feature-card-text">
                An internal onboard computer ensures users can securely access footage via local Wi-Fi or remote 4G/5G transmission from any location.
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-card-image storage"></div>
            <div class="feature-card-content">
              <h3 class="feature-card-title">VIDEO STORAGE</h3>
              <p class="feature-card-text">
                8-16TB onboard storage retains 30+ days of 4K footage with intelligent retention policies. Automatic cloud backup options available for critical events. Evidence-grade recording with tamper-proof encryption.
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-card-image radar"></div>
            <div class="feature-card-content">
              <h3 class="feature-card-title">RADAR</h3>
              <p class="feature-card-text">
                Military-grade radar detection extends surveillance range beyond 400 feet, accurately classifying people, vehicles, and animals. Works in complete darkness and severe weather conditions common in Washington State.
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-card-image floodlights"></div>
            <div class="feature-card-content">
              <h3 class="feature-card-title">FLOODLIGHTS</h3>
              <p class="feature-card-text">
                LED floodlights with automated dusk-to-dawn activation illuminate areas up to 200 feet. Motion-activated strobes provide additional deterrence while maintaining energy efficiency for extended autonomous operation.
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-card-image license"></div>
            <div class="feature-card-content">
              <h3 class="feature-card-title">LICENSE PLATE READER</h3>
              <p class="feature-card-text">
                Custom-developed license plate recognition (LPR) technology captures plates at high speeds, in both daylight and low-light conditions. Seamless database integration enables real-time alerts for vehicles of interest, enhancing law enforcement operations across Pierce and King Counties.              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Environmental Specifications Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Environmental & Compliance Specifications</h2>

        <div class="max-w-4xl mx-auto mb-12">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Environmental Ratings -->
            <div class="bg-white p-6 rounded-lg shadow">
              <h3 class="text-xl font-bold mb-4 text-green-600">Environmental Ratings</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <strong>Operating Temperature:</strong> -40°F to 140°F
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <strong>Humidity Range:</strong> 10-95% non-condensing
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <strong>Wind Resistance:</strong> 80 mph sustained, 100 mph gusts
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <strong>Ingress Protection:</strong> IP67 (dust/waterproof)
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <strong>Salt Spray Test:</strong> 1000+ hours
                  </div>
                </li>
              </ul>
            </div>

            <!-- Compliance & Certifications -->
            <div class="bg-white p-6 rounded-lg shadow">
              <h3 class="text-xl font-bold mb-4 text-blue-600">Compliance & Certifications</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <strong>FCC Part 15:</strong> Class A certified
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
