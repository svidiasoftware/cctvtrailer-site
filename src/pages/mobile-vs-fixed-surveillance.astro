      if (mobileTotal < fixedTotal) {
        recDiv.className = 'p-6 rounded-lg mb-4 bg-green-50 border-2 border-green-400';
        recDiv.innerHTML = '<h4 class="font-bold text-lg text-green-800 mb-2">Recommendation: Mobile Surveillance</h4>' +
          '<p class="text-gray-700">For a <strong>' + duration + '-month project</strong> with <strong>' + cameras + ' cameras</strong>, mobile surveillance saves you <strong class="text-green-700">' + savingsFormatted + '</strong> compared to a fixed installation. You also avoid installation delays, get same-day deployment, and can relocate as needed.</p>';
      } else if (fixedTotal < mobileTotal) {
        recDiv.className = 'p-6 rounded-lg mb-4 bg-blue-50 border-2 border-blue-400';
        recDiv.innerHTML = '<h4 class="font-bold text-lg text-blue-800 mb-2">Recommendation: Fixed Camera System</h4>' +
          '<p class="text-gray-700">For a <strong>' + duration + '-month project</strong> with <strong>' + cameras + ' cameras</strong>, a fixed camera system saves you <strong class="text-blue-700">' + savingsFormatted + '</strong> over the project duration. This assumes you have existing power and network infrastructure at the site.</p>' +
          '<p class="text-gray-600 text-sm mt-2">However, if your site lacks power or you need to relocate cameras during the project, mobile may still be the better choice. <a href="tel:2536832288" class="text-purple-700 underline font-semibold">Call (253) 683-2288</a> to discuss your situation.</p>';
      } else {
        recDiv.className = 'p-6 rounded-lg mb-4 bg-yellow-50 border-2 border-yellow-400';
        recDiv.innerHTML = '<h4 class="font-bold text-lg text-yellow-800 mb-2">It is a Toss-Up</h4>' +
          '<p class="text-gray-700">Both options cost roughly the same for your project parameters. Choose mobile if you need flexibility or lack site infrastructure. Choose fixed if you own the property and want a permanent asset.</p>';
      }

      // Update display values
      document.getElementById('tcoMobileMonthly').textContent = '$' + mobileMonthly.toLocaleString() + '/mo (' + trailersNeeded + ' trailer' + (trailersNeeded > 1 ? 's' : '') + ')';
      document.getElementById('tcoMobileTotal').textContent = '$' + mobileTotal.toLocaleString();
      document.getElementById('tcoFixedInstall').textContent = '$' + fixedInstallTotal.toLocaleString();
      document.getElementById('tcoFixedMonthly').textContent = monitoring === 'yes' ? '$' + fixedMonitoringMonthly.toLocaleString() + '/mo' : 'Self-monitored ($0)';
      document.getElementById('tcoFixedMaint').textContent = '$' + fixedMaintenance.toLocaleString();
      document.getElementById('tcoFixedRemoval').textContent = fixedRemoval > 0 ? '$' + fixedRemoval.toLocaleString() : '$0 (permanent)';
      document.getElementById('tcoFixedTotal').textContent = '$' + fixedTotal.toLocaleString();
      document.getElementById('tcoBreakeven').textContent = breakeven;

      // Show results
      document.getElementById('tcoResults').classList.remove('hidden');

      // Smooth scroll to results
      document.getElementById('tcoResults').scrollIntoView({ behavior: 'smooth', block: 'start' });

      // Track calculation in GA
      if (typeof gtag !== 'undefined') {
        gtag('event', 'calculate', {
          event_category: 'TCO Calculator',
          event_label: 'Mobile vs Fixed',
          value: mobileTotal
        });
      }
    });
  </script>
