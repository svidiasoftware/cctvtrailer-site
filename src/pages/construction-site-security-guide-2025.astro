import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTASection from '../components/CTASection.astro';
import LazyImage from '../components/LazyImage.astro';
import QuickAnswer from '../components/QuickAnswer.astro';
import StatBox from '../components/StatBox.astro';

const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.cctvtrailer.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Construction Site Security Guide 2025"
    }
  ]
});

const articleSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "The Complete Construction Site Security Guide for 2025",
  "description": "Comprehensive guide to protecting construction sites from theft, vandalism, and liability. Industry statistics, best practices, and proven security strategies.",
  "author": {
    "@type": "Organization",
    "name": "CCTV Trailer",
    "url": "https://www.cctvtrailer.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "CCTV Trailer",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.cctvtrailer.com/logo.webp"
    }
  },
  "datePublished": "2025-01-22",
  "dateModified": "2025-01-22",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://www.cctvtrailer.com/construction-site-security-guide-2025"
