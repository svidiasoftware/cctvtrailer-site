      }
    },
    {
      "@type": "Question",
      "name": "How effective are mobile surveillance trailers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mobile surveillance trailers reduce construction site theft by up to 95% and provide 24/7 monitoring at 90% less cost than security guards."
      }
    }
  ]
