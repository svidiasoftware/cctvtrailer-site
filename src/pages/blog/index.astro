    imageAlt: 'Construction site security measures and theft prevention'
  },
  {
    slug: 'construction-site-security-mobile-vs-fixed',
    title: 'Construction Site Security: Mobile vs Fixed Cameras',
    excerpt: 'Comprehensive comparison of mobile surveillance trailers versus fixed security cameras for construction sites. Discover which solution is best for your project.',
    date: '2025-03-18',
    readTime: '7 min read',
    image: '/images/construction-site-security-mobile-vs-fixed.webp',
    imageAlt: 'Construction site with security cameras and mobile surveillance trailer'
  },
  {
    slug: 'how-much-cost-rent-security-trailer',
    title: 'How Much Does It Cost to Rent a Security Trailer?',
    excerpt: 'Complete pricing guide for mobile surveillance trailer rentals. Learn about daily, weekly, and monthly rates, plus factors that affect pricing.',
    date: '2025-01-11',
    readTime: '5 min read',
    image: '/images/how-much-cost-rent-security-trailer.webp',
    imageAlt: 'Security pricing calculator and surveillance trailer'
  },
  {
    slug: 'advanced-video-surveillance-technology-svidia',
    title: 'Advanced Video Surveillance Technology: S-VIDIA System Explained',
    excerpt: 'Deep dive into S-VIDIA\'s cutting-edge surveillance technology. Learn how AI-powered video analytics, intelligent detection, and cloud integration revolutionize mobile security.',
    date: '2024-10-02',
    readTime: '10 min read',
    image: '/images/advanced-video-surveillance-technology.webp',
    imageAlt: 'Security camera surveillance system with monitoring'
  }
];

const blogSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "CCTV Trailer Security Blog",
  "description": "Expert insights on mobile surveillance, construction site security, and theft prevention from CCTV Trailer",
  "url": "https://www.cctvtrailer.com/blog",
  "publisher": {
    "@type": "Organization",
    "name": "CCTV Trailer",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.cctvtrailer.com/images/cctv-trailer-logo.png",
      "width": 512,
      "height": 512
    }
  },
  "blogPost": blogPosts.map(post => ({
    "@type": "BlogPosting",
    "headline": post.title,
    "description": post.excerpt,
    "datePublished": post.date,
    "url": `https://www.cctvtrailer.com/blog/${post.slug}`,
    "image": post.image,
    "author": {
      "@type": "Organization",
      "name": "CCTV Trailer"
    }
  }))
});
---

<Layout 
  title="Security & Surveillance Blog | CCTV Trailer Insights"
  description="Expert insights on mobile surveillance, construction site security, and theft prevention. Learn from 15+ years of security experience in the Pacific Northwest."
  schema={blogSchema}>
  
  <Header currentPath="/blog" showEmergencyBar={true} />

  <main>
    <!-- Hero Section -->
    <section class="hero-trailer">
      <div class="hero-overlay">
        <LazyImage src="/images/tacoma-dome-bg-hero.webp" alt="Mobile surveillance and security blog - Industry insights from CCTV Trailer" 
          class="w-full h-full object-cover" width="1920" height="1080" fetchPriority="high" loading="eager" />
      </div>
      <div class="hero-content">
        <div class="hero-text-wrapper">
          <h1 class="hero-heading">Security Insights & Resources</h1>
          <p class="hero-paragraph">
            Expert advice on mobile surveillance and construction site security from 15+ years of experience
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Content -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <!-- Blog Posts Grid -->
        <div class="grid md:grid-cols-2 gap-8">
          {blogPosts.map(post => (
            <article class="bg-white border-2 border-gray-200 rounded-lg overflow-hidden hover:shadow-2xl hover:border-blue-500 transition-all transform hover:-translate-y-1">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="relative h-64 overflow-hidden bg-gray-100">
                  <img 
                    src={post.image} 
                    alt={post.imageAlt}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                    width="800"
                    height="400"
                  />
                  <div class="absolute top-4 right-4 bg-black bg-opacity-60 text-white px-3 py-1 rounded-full text-sm">
                    {post.readTime}
                  </div>
                </div>
              </a>
              <div class="p-6">
                <div class="flex items-start justify-between mb-4">
                  <div class="text-sm text-gray-500">
                    <time datetime={post.date}>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                  </div>
                </div>
                <h2 class="text-xl font-bold mb-3">
                  <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
                    {post.title}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4">{post.excerpt}</p>
                <a href={`/blog/${post.slug}`} class="text-blue-600 font-semibold hover:text-blue-700 inline-flex items-center group">
                  Read More 
                  <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTASection 
      title="Need Security for Your Project?"
      description="Don't wait for an incident. Get professional mobile surveillance deployed at your site within 24 hours."
      features={["✓ Same Day Delivery", "✓ No Long-Term Contracts", "✓ 24/7 Support"]}
    />

  </main>

  <Footer />

