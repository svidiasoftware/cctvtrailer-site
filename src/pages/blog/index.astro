---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTASection from '../../components/CTASection.astro';
import LazyImage from '../../components/LazyImage.astro';


const blogPosts = [
  {
    slug: 'holiday-construction-site-theft-prevention-guide',
    title: "Holiday Construction Site Security: Why Theft Spikes 40% Between Thanksgiving and New Year's",
    excerpt: 'Construction site theft increases 40% during holidays. Learn why Thanksgiving to New Year\'s is peak theft season and how mobile surveillance protects when crews are off.',
    date: '2025-10-19',
    readTime: '8 min read',
    image: '/images/holiday-construction-site-security-thumb.webp',
    imageAlt: 'Holiday construction site security with mobile surveillance trailer protecting equipment'
  },
  {
    slug: 'cctv-network-security-design-network-separation',
    title: "CCTV Network Security: Why Network Separation is Critical in 2025",
    excerpt: 'Learn why network separation is critical for CCTV security. Protect against 200,000+ compromised devices, achieve NDAA compliance, and implement bulletproof network isolation strategies.',
    date: '2025-10-10',
    readTime: '10 min read',
    image: '/images/cctv-network-security-separation_thumb.webp',
    imageAlt: 'CCTV network security design showing network separation architecture'
  },
  {
    slug: 'why-svidia-fdc-technology-revolutionizes-security-surveillance',
