---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTASection from '../../components/CTASection.astro';
import Analytics from '../../components/Analytics.astro';
import BreadcrumbSchema from '../../components/BreadcrumbSchema.astro';
import LazyImage from '../../components/LazyImage.astro';
import QuickAnswer from '../../components/QuickAnswer.astro';
import StatBox from '../../components/StatBox.astro';
import SpeakableSchema from '../../components/SpeakableSchema.astro';

// Speakable sections for voice search
const speakableSections = [
  { cssSelector: ".quick-answer-content" },
  { cssSelector: ".blog-content h2, .blog-content p" },
  { cssSelector: ".stat-box" }
];

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "Why S-VIDIA's FDC Technology is Revolutionizing Security Surveillance in 2025",
  "datePublished": "2025-10-03",
  "dateModified": "2025-10-03",
  "author": {
    "@type": "Organization",
    "name": "CCTV Trailer",
    "url": "https://www.cctvtrailer.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "CCTV Trailer",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.cctvtrailer.com/images/cctv-trailer-logo.png"
    }
  },
  "description": "Discover how S-VIDIA's Flexible Delta Compression delivers 60% better storage efficiency, 95% motion detection accuracy, and court-admissible evidence quality that traditional H.264/H.265 cameras can't match.",
  "image": [
    "https://www.cctvtrailer.com/images/why-svidia-fdc-technology-revolutionizes-security-surveillance.webp"
  ],
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://www.cctvtrailer.com/blog/why-svidia-fdc-technology-revolutionizes-security-surveillance"
  },
  "wordCount": 3000,
  "keywords": [
    "S-VIDIA technology",
    "FDC compression",
    "security camera technology",
    "video surveillance compression",
    "court admissible surveillance",
    "forensic video evidence"
  ]
});

// Breadcrumb data
const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" },
  { name: "S-VIDIA FDC Technology Revolution" }
];
---

<Layout
  title="Why S-VIDIA's FDC Technology Revolutionizes Security | CCTV Trailer"
  description="Discover how S-VIDIA's Flexible Delta Compression delivers 60% better storage efficiency, 95% motion detection accuracy, and court-admissible evidence quality that traditional cameras can't match."
  schema={schema}>

  <BreadcrumbSchema items={breadcrumbItems} />
  <SpeakableSchema sections={speakableSections} />

  <Header showEmergencyBar={true} currentPath="/blog" />
  <Analytics />

  <main>
    <!-- Hero Section -->
    <section class="hero-trailer">
      <div class="hero-overlay">
        <LazyImage src="/images/why-svidia-fdc-technology-revolutionizes-security-surveillance.webp" alt="S-VIDIA FDC technology comparison with traditional surveillance systems"
