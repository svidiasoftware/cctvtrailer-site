---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTASection from '../components/CTASection.astro';
import QuoteForm from '../components/QuoteForm.astro';
import Analytics from '../components/Analytics.astro';
import ServiceSchema from '../components/ServiceSchema.astro';
import BreadcrumbSchema from '../components/BreadcrumbSchema.astro';
import ComparisonTable from '../components/ComparisonTable.astro';
import QuickAnswer from '../components/QuickAnswer.astro';
import StatBox from '../components/StatBox.astro';

// Schema data for the auto dealer security service
const serviceSchemaData = {
  serviceName: "Auto Dealership Security Trailer Rental - Tacoma",
  description: "Mobile surveillance trailer rentals for auto dealerships in Tacoma and South Tacoma Way. Protect inventory from vehicle theft with 24/7 monitoring. 1 in 34 vehicles stolen in Tacoma - protect your lot today.",
  price: "8000",
  priceUnit: "MONTH" as const,
  areaServed: [
    { type: "City" as const, name: "Tacoma" },
    { type: "City" as const, name: "Fife" },
    { type: "City" as const, name: "Puyallup" },
    { type: "City" as const, name: "Federal Way" },
    { type: "City" as const, name: "Lakewood" }
  ]
};

// Breadcrumb data
const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Services", url: "/services" },
  { name: "Auto Dealer Security - Tacoma" }
];
---

<Layout
  title="Auto Dealership Security Tacoma | South Tacoma Way Vehicle Theft Prevention"
  description="Protect your dealership from Tacoma's 1 in 34 vehicle theft rate. Mobile surveillance for South Tacoma Way dealers. 24/7 monitoring, same-day setup. (253) 683-2288">

  <!-- Structured Data Schemas -->
  <ServiceSchema {...serviceSchemaData} />
  <BreadcrumbSchema items={breadcrumbItems} />

  <Header showEmergencyBar={true} currentPath="/tacoma-auto-dealer-security" />
  <Analytics />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-900 to-blue-800 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Tacoma Auto Dealership Security Solutions</h1>
          <p class="text-xl mb-6">Protect Your Inventory from Tacoma's High Vehicle Theft Rate - 1 in 34 Vehicles Stolen</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="tel:2536832288" class="bg-white text-blue-900 hover:bg-gray-100 font-bold py-3 px-8 rounded-lg inline-block text-center">
              📞 Call Now: (253) 683-2288
            </a>
            <a href="#dealer-quote" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg inline-block text-center">
              Get Dealership Quote →
            </a>
          </div>
          <p class="mt-4 text-yellow-300">⚡ Serving South Tacoma Way, Fife, and Puyallup auto dealers since 2009</p>
        </div>
      </div>
    </section>

    <!-- Critical Stats Section -->
    <section class="py-12 bg-red-50">
      <div class="container mx-auto px-4">
        <StatBox
          title="Tacoma Auto Theft Crisis - Why Dealers Need Protection Now"
          description="Recent crime statistics affecting South Tacoma Way dealerships"
          layout="grid"
          stats={[
            {
              value: "5,901",
              label: "Vehicles Stolen in Tacoma (2023)",
              icon: "🚗",
              highlight: true,
              source: { text: "Tacoma Police Department" }
            },
            {
              value: "1 in 34",
              label: "Chance of Vehicle Theft",
              icon: "⚠️",
              highlight: true,
              source: { text: "Tacoma Crime Statistics" }
            },
            {
              value: "South Tacoma",
              label: "High-Crime Zone for Auto Theft",
              icon: "📍",
              highlight: true,
              source: { text: "NeighborhoodScout 2024" }
            },
            {
              value: "$45,000+",
              label: "Average Inventory Loss Per Incident",
              icon: "💰",
              highlight: true
            }
          ]}
        />
      </div>
    </section>

    <!-- Quick Answer Box -->
    <section class="py-8 bg-gray-50">
      <div class="container mx-auto px-4">
        <QuickAnswer
          what="24/7 mobile surveillance trailers for auto dealerships in Tacoma"
          cost="$8,000-10,000/month - 75% less than security guards"
          time="Same-day deployment, 30-minute setup"
          coverage="360° lot coverage, license plate recognition, night vision"
          availability="24/7 emergency response for South Tacoma Way dealers"
          includes={[
            "HD video recording with S-VIDIA technology",
            "Remote viewing access for managers",
            "Motion-activated lighting and alerts",
            "Insurance documentation support",
            "Customer parking lot safety",
            "Theft deterrence visible signage"
          ]}
        />
      </div>
    </section>

    <!-- Auto Dealer Challenges Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Security Challenges Facing Tacoma Auto Dealers</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <div class="bg-gray-50 p-6 rounded-lg shadow-lg">
            <div class="text-4xl mb-4">🚙</div>
            <h3 class="text-xl font-bold mb-3">High-Value Inventory Exposure</h3>
            <p class="text-gray-600">$2M+ in vehicles sitting on open lots. South Tacoma Way dealerships are prime targets with easy highway access for quick getaways.</p>
          </div>
          <div class="bg-gray-50 p-6 rounded-lg shadow-lg">
            <div class="text-4xl mb-4">🌙</div>
            <h3 class="text-xl font-bold mb-3">After-Hours Vulnerability</h3>
            <p class="text-gray-600">76% of vehicle thefts occur overnight and on weekends when dealerships are closed and unmonitored.</p>
          </div>
          <div class="bg-gray-50 p-6 rounded-lg shadow-lg">
            <div class="text-4xl mb-4">📋</div>
            <h3 class="text-xl font-bold mb-3">Insurance & Liability Costs</h3>
            <p class="text-gray-600">Rising premiums due to regional theft rates. Customer vehicle damage in parking lots creates liability exposure.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why South Tacoma Way Dealers Are Targeted -->
    <section class="bg-blue-50 py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-4">Why South Tacoma Way Dealerships Are High-Risk Targets</h2>
        <p class="text-center text-gray-600 mb-12 max-w-3xl mx-auto">
          Understanding the specific threats to auto dealers in South Tacoma's high-crime corridor
        </p>

        <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
          <div class="bg-white rounded-lg p-8 shadow-lg">
            <h3 class="text-2xl font-bold mb-6">Geographic Risk Factors</h3>
            <div class="space-y-4">
              <div class="border-l-4 border-red-600 pl-4">
                <p class="font-semibold">South Tacoma High-Crime Zone</p>
                <p class="text-gray-600">Eastern and South Tacoma report the city's highest crime rates, with South Tacoma Way running through the center of this corridor.</p>
              </div>
              <div class="border-l-4 border-orange-600 pl-4">
                <p class="font-semibold">Highway Access</p>
                <p class="text-gray-600">I-5 and SR-512 proximity allows thieves to steal vehicles and quickly leave jurisdiction within minutes.</p>
              </div>
              <div class="border-l-4 border-yellow-600 pl-4">
                <p class="font-semibold">Auto Row Concentration</p>
                <p class="text-gray-600">Multiple dealerships in close proximity create target-rich environment. Thieves scope multiple lots in one visit.</p>
              </div>
              <div class="border-l-4 border-purple-600 pl-4">
                <p class="font-semibold">Recent Break-In Pattern</p>
                <p class="text-gray-600">Auto shops on South Tacoma Way experienced multiple break-ins in 2024, with thieves stealing vehicles and parts.</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-8 shadow-lg">
            <h3 class="text-2xl font-bold mb-6">What Dealerships Are Losing</h3>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold mb-2 text-blue-600">Vehicle Theft</h4>
                <p class="text-gray-600">Entire vehicles stolen from lot - average loss $30,000-$80,000 per vehicle. High-end trucks and SUVs are primary targets.</p>
              </div>
              <div>
                <h4 class="font-semibold mb-2 text-blue-600">Parts & Catalytic Converters</h4>
                <p class="text-gray-600">Organized theft rings targeting catalytic converters ($1,500 replacement each) and wheels/rims from luxury vehicles.</p>
              </div>
              <div>
                <h4 class="font-semibold mb-2 text-blue-600">Vandalism & Joyriding</h4>
                <p class="text-gray-600">Broken windows, damaged interiors, and unauthorized test drives result in $5,000-$15,000 repair costs per incident.</p>
              </div>
              <div>
                <h4 class="font-semibold mb-2 text-blue-600">Customer Safety Concerns</h4>
                <p class="text-gray-600">Parking lot crimes deter customers. One safety incident can damage dealership reputation and reduce foot traffic.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

