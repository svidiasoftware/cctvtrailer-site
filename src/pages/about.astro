---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTASection from '../components/CTASection.astro';

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "CCTV Trailer",
  "description": "Locally owned mobile surveillance trailer rental company serving Tacoma and the Pacific Northwest since 2003",
  "url": "https://www.cctvtrailer.com/about",
  "telephone": "(253) 683-2288",
  "email": "info@cctvtrailer.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Tacoma",
    "addressRegion": "WA",
    "addressCountry": "US"
  },
  "areaServed": [
    {"@type": "City", "name": "Tacoma"},
    {"@type": "City", "name": "Seattle"},
    {"@type": "City", "name": "Olympia"},
    {"@type": "City", "name": "Federal Way"},
    {"@type": "City", "name": "Kent"},
    {"@type": "City", "name": "Auburn"},
    {"@type": "City", "name": "Puyallup"},
    {"@type": "City", "name": "Lakewood"}
  ],
  "founder": {
    "@type": "Person",
    "name": "CCTV Trailer Team"
  },
  "foundingDate": "2003",
  "numberOfEmployees": {
    "@type": "QuantitativeValue",
    "value": 10
  }
});
