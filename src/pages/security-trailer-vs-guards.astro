    <!-- ROI Calculator Section -->
    <section id="comparison-calculator" class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Calculate Your Security Savings</h2>

        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-8">
          <div class="grid md:grid-cols-2 gap-6 mb-8">
            <div>
              <label class="block text-sm font-semibold mb-2">Site Size (acres)</label>
              <input type="number" id="site-size" value="5" class="w-full px-4 py-2 border rounded-lg" />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">Current Guard Hours/Day</label>
              <input type="number" id="guard-hours" value="24" class="w-full px-4 py-2 border rounded-lg" />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">Guard Hourly Rate</label>
