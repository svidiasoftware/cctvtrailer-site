        <h2 class="text-3xl font-bold text-center mb-8">Get Your Free Security Comparison Report</h2>
        <QuoteForm
          showTitle={false}
          buttonText="Get My Comparison Report â†’"
          formId="comparison-quote-form"
        />
      </div>
    </section>
  </main>

  <Footer />

  <script is:inline>
    function calculateSavings() {
      const siteSize = parseFloat(document.getElementById('site-size').value) || 5;
      const guardHours = parseFloat(document.getElementById('guard-hours').value) || 24;
      const hourlyRate = parseFloat(document.getElementById('hourly-rate').value) || 25;
      const duration = parseFloat(document.getElementById('duration').value) || 6;

      // Calculate guard costs
      const dailyGuardCost = guardHours * hourlyRate;
      const monthlyGuardCost = dailyGuardCost * 30;
      const totalGuardCost = monthlyGuardCost * duration;

      // Calculate trailer costs (base rate with adjustments for size)
      const trailersNeeded = Math.ceil(siteSize / 5);
      const monthlyTrailerCost = 8000 * trailersNeeded;
      const totalTrailerCost = monthlyTrailerCost * duration;

      // Calculate savings
      const totalSavings = totalGuardCost - totalTrailerCost;

      // Display results
      document.getElementById('guard-cost').textContent = `$${totalGuardCost.toLocaleString()}`;
      document.getElementById('trailer-cost').textContent = `$${totalTrailerCost.toLocaleString()}`;
      document.getElementById('total-savings').textContent = `$${totalSavings.toLocaleString()}`;
      document.getElementById('savings-result').classList.remove('hidden');
    }
  </script>
