            { feature: "False Alarms", values: ["Human error prone", { text: "AI reduces by 95%", highlight: true }] },
            { feature: "Insurance Discount", values: ["0-5%", { text: "10-20% reduction", highlight: true }] },
            { feature: "Deployment Time", values: ["24-48 hours", { text: "2-4 hours", highlight: true }] },
            { feature: "Scalability", values: ["Requires more guards", { text: "Single unit covers more", highlight: true }] },
