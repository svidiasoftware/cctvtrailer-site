  <script>
    function calculateCosts() {
      const siteSize = parseFloat(document.getElementById('siteSize').value) || 50000;
      const coverage = document.getElementById('coverageHours').value;
      const securityType = document.getElementById('securityType').value;
      const contract = document.getElementById('contractLength').value;

      // Base costs
      let guardHourlyRate = 20;
      let trailerMonthly = 8000;

      // Adjust for coverage hours
      let hoursPerMonth = coverage === '24/7' ? 720 : coverage === 'night' ? 360 : 360;
      let guardsNeeded = coverage === '24/7' ? 2 : 1;

      // Adjust for site size
      if (siteSize > 100000) {
        guardsNeeded = Math.ceil(guardsNeeded * 1.5);
        trailerMonthly += 2000;
      }

      // Calculate guard costs
      let guardMonthlyCost = guardsNeeded * guardHourlyRate * hoursPerMonth;
      // Add overhead (benefits, insurance, management)
      guardMonthlyCost *= 1.3;

      // Add contract discounts
      if (contract === 'annual') {
        trailerMonthly *= 0.9;
        guardMonthlyCost *= 0.95;
      }

      // Calculate based on security type
      let actualGuardCost = securityType === 'guards' || securityType === 'both' ? guardMonthlyCost : 0;
      let actualTrailerCost = securityType === 'trailer' || securityType === 'both' ? trailerMonthly : 0;

      if (securityType === 'both') {
        actualGuardCost *= 0.5; // Only one guard needed with trailer
      }

      // Update display
      document.getElementById('guardsCost').textContent = `$${Math.round(guardMonthlyCost).toLocaleString()}/mo`;
      document.getElementById('trailerCost').textContent = `$${Math.round(trailerMonthly).toLocaleString()}/mo`;

      const savings = guardMonthlyCost - trailerMonthly;
      document.getElementById('monthlySavings').textContent = `$${Math.round(Math.abs(savings)).toLocaleString()}/mo`;
      document.getElementById('annualSavings').textContent = `$${Math.round(Math.abs(savings * 12)).toLocaleString()}`;
    }

    // Add event listeners
    document.getElementById('siteSize').addEventListener('input', calculateCosts);
    document.getElementById('coverageHours').addEventListener('change', calculateCosts);
    document.getElementById('securityType').addEventListener('change', calculateCosts);
    document.getElementById('contractLength').addEventListener('change', calculateCosts);

    // Initial calculation
    calculateCosts();
  </script>

