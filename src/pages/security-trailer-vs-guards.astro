---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LazyImage from '../components/LazyImage.astro';
import CTASection from '../components/CTASection.astro';
import StatBox from '../components/StatBox.astro';
import ComparisonTable from '../components/ComparisonTable.astro';

const title = "Security Trailer vs Security Guards | Cost & Effectiveness Comparison";
const description = "Compare mobile surveillance trailers vs security guards for construction sites. See actual cost savings of 88%, 24/7 coverage benefits, and ROI analysis for Washington state projects.";
---

<Layout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section -->
    <div class="hero-trailer">
      <div class="hero-overlay">
        <LazyImage src="/images/tacoma-dome-bg-hero3.webp" alt="Security trailer vs security guards comparison"
        class="w-full h-full object-cover" width="1920" height="1080" fetchPriority="high" loading="eager" />
      </div>
      <div class="hero-content">
        <div class="hero-text-wrapper">
          <h1 class="hero-heading">Security Trailer vs Security Guards</h1>
          <p class="hero-paragraph">
            Save up to 62% on security costs while getting superior 24/7 coverage. See why Washington construction companies are switching to mobile surveillance.
          </p>
          <a href="/contact" class="red-button mt-6">Get Cost Comparison</a>
        </div>
      </div>
    </div>

    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Real Cost Comparison for Washington Construction Sites
          </h2>
          <p class="text-xl text-gray-600">
            Based on actual 2024-2025 market rates in Seattle-Tacoma area
          </p>
        </div>

        <StatBox
          stats={[
            { value: "62%", label: "Cost Savings", subtext: "vs. security guards", color: "green" },
            { value: "$8,000+", label: "Monthly Trailer Cost", subtext: "Professional monitoring", color: "blue" },
            { value: "$20,800", label: "Monthly Guard Cost", subtext: "2 guards, 24/7", color: "red" },
            { value: "85%", label: "Crime Prevention", subtext: "With surveillance", color: "purple" }
          ]}
        />

        <div class="mt-12 bg-gray-50 p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-6">Monthly Cost Calculator</h3>
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Site Size (sq ft)</label>
              <input type="number" id="siteSize" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="50000" value="50000">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Coverage Hours</label>
              <select id="coverageHours" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="night">Nights Only (6pm-6am)</option>
                <option value="24/7" selected>24/7 Coverage</option>
                <option value="business">Business Hours Only</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Security Option</label>
              <select id="securityType" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="guards">Security Guards</option>
                <option value="trailer" selected>Mobile Surveillance Trailer</option>
                <option value="both">Hybrid (Trailer + 1 Guard)</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Contract Length</label>
              <select id="contractLength" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly" selected>Monthly</option>
                <option value="annual">Annual</option>
              </select>
            </div>
          </div>

          <div class="mt-8 p-6 bg-white rounded-lg">
            <h4 class="font-bold text-lg mb-4">Cost Analysis</h4>
            <div class="grid md:grid-cols-3 gap-4">
              <div>
                <p class="text-sm text-gray-600">Security Guards Cost</p>
                <p class="text-2xl font-bold text-red-600" id="guardsCost">$20,800/mo</p>
                <p class="text-xs text-gray-500">2 guards @ $20/hr</p>
              </div>
              <div>
                <p class="text-sm text-gray-600">Surveillance Trailer Cost</p>
                <p class="text-2xl font-bold text-green-600" id="trailerCost">$8,000/mo</p>
                <p class="text-xs text-gray-500">Professional monitoring included</p>
              </div>
              <div>
                <p class="text-sm text-gray-600">Your Savings</p>
                <p class="text-2xl font-bold text-blue-600" id="monthlySavings">$12,800/mo</p>
                <p class="text-xs text-gray-500">62% reduction</p>
              </div>
            </div>
            <div class="mt-4 p-4 bg-green-50 rounded">
              <p class="text-lg font-semibold">Annual Savings: <span id="annualSavings" class="text-green-600">$153,600</span></p>
            </div>
