        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:2536832288" class="bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-lg inline-block">
            ðŸ“ž Call (253) 683-2288
          </a>
          <a href="#quote-form" class="bg-white text-blue-900 hover:bg-gray-100 font-bold py-4 px-8 rounded-lg inline-block">
            Get Free Quote â†’
          </a>
        </div>
      </div>
    </section>

    <!-- Quote Form -->
    <section id="quote-form" class="py-16 bg-white">
