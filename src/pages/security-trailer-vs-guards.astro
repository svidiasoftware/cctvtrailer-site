const faqSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does a security trailer cost compared to guards?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Security trailers typically cost $8,000-12,000 per month, while 24/7 security guard coverage costs $15,000-25,000+ monthly. This represents a 40-60% cost savings with surveillance trailers."
      }
    },
    {
      "@type": "Question",
      "name": "Are security cameras better than security guards?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Security cameras provide 24/7 coverage, recorded evidence, and wider area monitoring at lower cost. Guards offer human intervention and flexibility. Many sites use both for comprehensive protection."
      }
    },
    {
      "@type": "Question",
      "name": "Can surveillance trailers replace security guards?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, surveillance trailers can replace guards for many applications including construction sites, parking lots, and storage yards. They provide continuous monitoring, recording, and remote response capabilities."
