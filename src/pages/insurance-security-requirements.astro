  <script>
    const projectValue = document.getElementById('projectValue');
    const premiumRate = document.getElementById('premiumRate');
    const securityType = document.getElementById('securityType');
    const insuranceType = document.getElementById('insuranceType');
    const currentPremium = document.getElementById('currentPremium');
    const newPremium = document.getElementById('newPremium');
    const annualSavings = document.getElementById('annualSavings');

    function calculateSavings() {
      const value = parseFloat(projectValue.value) || 5000000;
      const rate = parseFloat(premiumRate.value) || 2.5;
      const security = securityType.value;
      const insurance = insuranceType.value;

      const basePremium = value * (rate / 100);

      let reduction = 0;
      if (security === 'basic') reduction = 0.05;
      else if (security === 'mobile') reduction = 0.15;
      else if (security === 'comprehensive') reduction = 0.20;

      if (insurance === 'builders') reduction *= 1.2;
      else if (insurance === 'comprehensive') reduction *= 1.1;

      const newPremiumAmount = basePremium * (1 - reduction);
      const savings = basePremium - newPremiumAmount;

      currentPremium.textContent = '$' + basePremium.toLocaleString();
      newPremium.textContent = '$' + newPremiumAmount.toLocaleString();
      annualSavings.textContent = '$' + savings.toLocaleString();
    }

    projectValue.addEventListener('input', calculateSavings);
    premiumRate.addEventListener('input', calculateSavings);
    securityType.addEventListener('change', calculateSavings);
    insuranceType.addEventListener('change', calculateSavings);

    calculateSavings();
  </script>

