---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LazyImage from '../components/LazyImage.astro';
import CTASection from '../components/CTASection.astro';
import StatBox from '../components/StatBox.astro';
import ComparisonTable from '../components/ComparisonTable.astro';

const title = "Insurance Security Requirements | How Surveillance Reduces Premiums";
const description = "Learn how mobile surveillance systems meet insurance security requirements and significantly reduce construction insurance premiums. Get detailed premium reduction strategies and documentation requirements.";
