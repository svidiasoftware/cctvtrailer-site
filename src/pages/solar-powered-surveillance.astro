        batteryBase *= 1.2;
      } else if (features.value === 'thermal') {
        basePower *= 1.4;
        batteryBase *= 1.4;
      } else if (features.value === 'full') {
        basePower *= 1.6;
        batteryBase *= 1.6;
      }

      // Location adjustment
