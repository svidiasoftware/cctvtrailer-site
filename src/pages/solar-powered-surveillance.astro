---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LazyImage from '../components/LazyImage.astro';
import CTASection from '../components/CTASection.astro';
import StatBox from '../components/StatBox.astro';
import ComparisonTable from '../components/ComparisonTable.astro';

const title = "Solar Powered Security Trailer | Eco-Friendly Off-Grid Surveillance";
const description = "Deploy solar powered security trailers for sustainable, off-grid surveillance. Zero emissions, no power costs, and reliable 24/7 operation in remote locations without infrastructure.";
---

<Layout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section -->
    <div class="hero-trailer">
      <div class="hero-overlay">
        <LazyImage src="/images/tacoma-dome-bg-hero3.webp" alt="Solar powered security trailer with panels"
        class="w-full h-full object-cover" width="1920" height="1080" fetchPriority="high" loading="eager" />
      </div>
      <div class="hero-content">
        <div class="hero-text-wrapper">
          <h1 class="hero-heading">Solar Powered Security Trailers</h1>
          <p class="hero-paragraph">
            Deploy eco-friendly security anywhere with our solar powered surveillance trailers. No power connection needed, zero emissions, and reliable 24/7 operation.
          </p>
          <a href="/contact" class="red-button mt-6">Get Solar Quote</a>
        </div>
      </div>
    </div>

    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Solar Surveillance System Performance
          </h2>
          <p class="text-xl text-gray-600">
            Reliable security powered entirely by renewable energy
          </p>
        </div>

        <StatBox
          stats={[
            { value: "365", label: "Days Operation", subtext: "Year-round capability", color: "green" },
            { value: "72hr", label: "Battery Backup", subtext: "Cloudy weather operation", color: "blue" },
            { value: "$0", label: "Power Costs", subtext: "100% solar powered", color: "purple" },
            { value: "25yr", label: "Panel Lifespan", subtext: "Warranty coverage", color: "orange" }
          ]}
        />

        <div class="mt-12 bg-gray-50 p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-6">Solar Power Calculator</h3>
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
              <select id="location" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="seattle" selected>Seattle, WA</option>
                <option value="portland">Portland, OR</option>
                <option value="spokane">Spokane, WA</option>
                <option value="tacoma">Tacoma, WA</option>
                <option value="vancouver">Vancouver, WA</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Number of Cameras</label>
              <select id="cameras" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="4" selected>4 Cameras</option>
                <option value="6">6 Cameras</option>
                <option value="8">8 Cameras</option>
                <option value="12">12 Cameras</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Features Required</label>
              <select id="features" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="basic">Basic Recording</option>
                <option value="analytics" selected>AI Analytics</option>
                <option value="thermal">Thermal Imaging</option>
                <option value="full">Full Feature Set</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Deployment Duration</label>
              <select id="duration" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="3">3 Months</option>
                <option value="6" selected>6 Months</option>
                <option value="12">12 Months</option>
                <option value="24">24+ Months</option>
              </select>
            </div>
          </div>

          <div class="mt-8 grid md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg">
              <h4 class="font-semibold mb-2">Solar Capacity Required</h4>
              <p class="text-2xl font-bold text-green-600" id="solarCapacity">2.4 kW</p>
              <p class="text-sm text-gray-600">Panel array size</p>
            </div>
            <div class="bg-white p-6 rounded-lg">
              <h4 class="font-semibold mb-2">Battery Storage</h4>
              <p class="text-2xl font-bold text-blue-600" id="batteryStorage">14.4 kWh</p>
              <p class="text-sm text-gray-600">72-hour backup</p>
            </div>
            <div class="bg-white p-6 rounded-lg">
              <h4 class="font-semibold mb-2">Power Savings</h4>
              <p class="text-2xl font-bold text-purple-600" id="powerSavings">$1,800/mo</p>
              <p class="text-sm text-gray-600">vs. generator power</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">
          Solar vs Traditional Power Comparison
        </h2>

        <ComparisonTable
          headers={["Solar Powered", "Grid Connected", "Generator Powered"]}
          rows={[
            { feature: "Initial Setup Cost", values: ["$8,000-12,000", "$5,000-15,000", "$3,000-5,000"] },
            { feature: "Monthly Operating Cost", values: [{ text: "$0", highlight: true }, "$300-500", "$1,500-2,500"] },
            { feature: "Deployment Time", values: [{ text: "2-4 hours", highlight: true }, "2-4 weeks", "4-6 hours"] },
            { feature: "Location Flexibility", values: [{ text: "Anywhere", highlight: true }, "Near power lines", "Anywhere (with fuel)"] },
            { feature: "Reliability", values: [{ text: "99.9%", highlight: true }, "99.5%", "95%"] },
            { feature: "Maintenance", values: [{ text: "Annual cleaning", highlight: true }, "Minimal", "Weekly refueling"] },
            { feature: "Environmental Impact", values: [{ text: "Zero emissions", highlight: true }, "Grid dependent", "High emissions"] },
            { feature: "Noise Level", values: [{ text: "Silent", highlight: true }, "Silent", "65-75 dB"] },
            { feature: "Weather Resilience", values: [{ text: "72hr battery backup", highlight: true }, "Grid dependent", "Fuel dependent"] },
            { feature: "Long-term ROI", values: [{ text: "Highest (3-6 months)", highlight: true }, "Medium", "Lowest"] }
          ]}
        />
      </div>
    </section>

    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">
          Advanced Solar Technology Features
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">High-Efficiency Panels</h3>
            <p class="text-gray-600">
              Monocrystalline silicon panels with 22% efficiency rating, maximizing power generation even in low-light conditions.
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Smart Battery Management</h3>
            <p class="text-gray-600">
              LiFePO4 batteries with intelligent charge controllers ensure 10+ year lifespan and optimal performance in all weather.
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Power Optimization</h3>
            <p class="text-gray-600">
              MPPT tracking adjusts power draw based on available sunlight, maintaining operation even during extended cloudy periods.
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Auto-Tracking System</h3>
            <p class="text-gray-600">
              Optional solar panel tracking increases energy harvest by 30%, following the sun's path throughout the day.
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11 4a1 1 0 10-2 0v4a1 1 0 102 0V7zm-3 1a1 1 0 10-2 0v3a1 1 0 102 0V8zM8 9a1 1 0 00-2 0v2a1 1 0 102 0V9z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Remote Monitoring</h3>
            <p class="text-gray-600">
              Real-time power generation and consumption monitoring via web dashboard, with alerts for any system issues.
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-teal-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Weather Resistant</h3>
            <p class="text-gray-600">
              IP67 rated components withstand extreme weather, from -40°F to 140°F, with hail and wind resistance.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">
          Perfect Applications for Solar Surveillance
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white p-8 rounded-lg shadow">
            <h3 class="text-2xl font-bold mb-6 text-green-600">Remote Locations</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Pipeline Monitoring</strong>
                  <p class="text-gray-600">Monitor remote pipeline sections without infrastructure</p>
                </div>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Mining Operations</strong>
                  <p class="text-gray-600">Secure equipment in off-grid mining sites</p>
                </div>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Agricultural Monitoring</strong>
                  <p class="text-gray-600">Protect crops and equipment on large farms</p>
                </div>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Border Security</strong>
                  <p class="text-gray-600">Monitor remote border areas continuously</p>
                </div>
              </li>
            </ul>
          </div>

          <div class="bg-white p-8 rounded-lg shadow">
            <h3 class="text-2xl font-bold mb-6 text-blue-600">Environmentally Sensitive Areas</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>National Parks</strong>
                  <p class="text-gray-600">Zero-emission security for protected lands</p>
                </div>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Wildlife Reserves</strong>
                  <p class="text-gray-600">Silent monitoring without disturbing wildlife</p>
                </div>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Wetlands Protection</strong>
                  <p class="text-gray-600">Monitor sensitive ecosystems sustainably</p>
                </div>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <strong>Historic Sites</strong>
                  <p class="text-gray-600">Protect heritage sites without infrastructure impact</p>
                </div>
              </li>
            </ul>
