---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTASection from '../components/CTASection.astro';

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact CCTV Trailer",
  "description": "Contact CCTV Trailer for mobile surveillance solutions in Tacoma and Seattle. 24/7 emergency response available.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "CCTV Trailer",
    "telephone": "(253) 683-2288",
    "email": "info@cctvtrailer.com",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Tacoma",
      "addressRegion": "WA",
      "addressCountry": "US"
    },
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:00",
        "closes": "18:00"
      }
    ]
  }
});
---

<Layout 
  title="Contact Us | CCTV Trailer Security Solutions"
  description="Get in touch with CCTV Trailer for mobile surveillance trailer rentals in Tacoma and Seattle. 24/7 emergency response available. Call (253) 683-2288."
  keywords="contact CCTV trailer, security trailer rental contact, mobile surveillance contact, Tacoma security contact"
  schema={schema}>
  <Header currentPath="/contact" showEmergencyBar={true} />

  <main>
    <!-- Hero Section -->
    <section class="hero-trailer">
      <div class="hero-overlay">
        <img src="/images/tacoma-dome-bg-hero2.jpg" alt="Contact CCTV Trailer" />
      </div>
      <div class="hero-content">
        <div class="hero-text-wrapper">
          <h1 class="hero-heading">Contact Us</h1>
          <p class="hero-paragraph">
            Available 24/7 for emergency deployments. Get your security solution deployed today.
          </p>
          <div class="hero-buttons">
            <a href="tel:2536832288" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg inline-block">
              üìû Call Now: (253) 683-2288
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        
        <!-- Quick Contact Cards -->
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-white rounded-lg shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
            <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üìû</span>
            </div>
            <h3 class="font-bold text-lg mb-2">Call Us</h3>
            <a href="tel:2536832288" class="text-green-600 hover:text-green-700 font-semibold text-xl">(253) 683-2288</a>
            <p class="text-sm text-gray-600 mt-2">24/7 Emergency Response</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
            <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">‚úâÔ∏è</span>
            </div>
            <h3 class="font-bold text-lg mb-2">Email Us</h3>
            <a href="mailto:info@cctvtrailer.com" class="text-blue-600 hover:text-blue-700 font-semibold">info@cctvtrailer.com</a>
            <p class="text-sm text-gray-600 mt-2">Quick response guaranteed</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
            <div class="bg-purple-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üìç</span>
            </div>
            <h3 class="font-bold text-lg mb-2">Service Area</h3>
            <p class="font-semibold">Tacoma, WA</p>
            <p class="text-sm text-gray-600 mt-2">Serving all Puget Sound</p>
          </div>
        </div>

        <!-- Main Contact Section -->
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Contact Information</h2>
            <div class="space-y-6">
              <div class="flex items-start">
                <span class="text-green-600 mr-3 text-xl mt-1">üìû</span>
                <div>
                  <h3 class="font-semibold mb-1">Phone</h3>
                  <a href="tel:2536832288" class="text-blue-600 hover:text-blue-700 text-lg">(253) 683-2288</a>
                  <p class="text-sm text-gray-600 mt-1">Available 24/7 for emergencies</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <span class="text-blue-600 mr-3 text-xl mt-1">‚úâÔ∏è</span>
                <div>
                  <h3 class="font-semibold mb-1">Email</h3>
                  <a href="mailto:info@cctvtrailer.com" class="text-blue-600 hover:text-blue-700">info@cctvtrailer.com</a>
                  <p class="text-sm text-gray-600 mt-1">Response within 1 hour</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <span class="text-purple-600 mr-3 text-xl mt-1">üìç</span>
                <div>
                  <h3 class="font-semibold mb-1">Service Area</h3>
                  <p>Tacoma, Washington</p>
                  <p class="text-sm text-gray-600 mt-1">Free delivery within 30 miles</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <span class="text-orange-600 mr-3 text-xl mt-1">üïê</span>
                <div>
                  <h3 class="font-semibold mb-1">Business Hours</h3>
                  <p class="font-semibold">Office: Mon-Fri 8AM-6PM</p>
                  <p class="text-red-600 font-semibold">Emergency: 24/7/365</p>
                  <p class="text-sm text-gray-600 mt-1">Same-day deployment available</p>
                </div>
              </div>

              <div class="bg-green-50 border-2 border-green-500 rounded-lg p-4 mt-6">
                <p class="font-semibold text-green-800">üö® Need Immediate Security?</p>
                <p class="text-sm text-green-700 mt-1">Call now for 2-hour emergency deployment</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Request a Quote</h2>
            <form action="https://api.web3forms.com/submit" method="POST" class="space-y-4">
              <!-- Web3Forms Configuration -->
              <input type="hidden" name="access_key" value="99665c86-0758-4373-a387-bd42f36f9989">
              <input type="hidden" name="subject" value="New Contact Form Submission - CCTV Trailer">
              <input type="hidden" name="from_name" value="CCTV Trailer Website">
              <input type="hidden" name="redirect" value="https://www.cctvtrailer.com/contact-success">
              <!-- <input type="hidden" name="redirect" value="https://cctvtrailer-site.vercel.app/contact-success"> -->
              <!-- <div class="h-captcha" data-captcha="true"></div> -->
              <!-- <script src="https://web3forms.com/client/script.js" async defer></script> -->

              <!-- Honeypot Spam Protection -->
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
              
              <div>
                <label for="name" class="block mb-2 font-medium text-gray-700">Name *</label>
                <input type="text" id="name" name="name" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 focus:outline-none transition-colors" required>
              </div>
              
              <div>
                <label for="email" class="block mb-2 font-medium text-gray-700">Email *</label>
                <input type="email" id="email" name="email" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 focus:outline-none transition-colors" required>
              </div>
              
              <div>
                <label for="phone" class="block mb-2 font-medium text-gray-700">Phone</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  pattern="^(\+?1[-.\s]?)?\(?\d{3}\)?[-.\s]?\d{3}[-.\s]?\d{4}$"
                  title="Please enter a valid US phone number (e.g., 253-683-2288, (253) 683-2288, or 2536832288)"
                  placeholder="(253) 683-2288"
                  class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 focus:outline-none transition-colors">
              </div>

              <div>
                <label for="location" class="block mb-2 font-medium text-gray-700">Project Location</label>
                <input type="text" id="location" name="location" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 focus:outline-none transition-colors" placeholder="e.g., Tacoma, Seattle, Federal Way">
              </div>

              <div>
                <label for="duration" class="block mb-2 font-medium text-gray-700">Rental Duration</label>
                <select id="duration" name="duration" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 focus:outline-none transition-colors">
                  <option value="">Select duration...</option>
                  <option value="1-3 days">1-3 Days</option>
                  <option value="1 week">1 Week</option>
                  <option value="2 weeks">2 Weeks</option>
                  <option value="1 month">1 Month</option>
                  <option value="2-3 months">2-3 Months</option>
                  <option value="3+ months">3+ Months</option>
                  <option value="not sure">Not Sure</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block mb-2 font-medium text-gray-700">Message *</label>
                <textarea id="message" name="message" rows="4" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 focus:outline-none transition-colors" placeholder="Tell us about your security needs..." required></textarea>
              </div>
              
              <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-lg">
                Send Message ‚Üí
              </button>
              
              <p class="text-sm text-gray-600 text-center mt-4">
                * Required fields. We'll respond within 1 hour during business hours.
              </p>
            </form>
          </div>
        </div>
        
        <!-- Response Time Section -->
        <div class="mt-12 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg p-8 text-white shadow-xl">
          <div class="grid md:grid-cols-3 gap-6 text-center">
            <div>
              <div class="text-3xl font-bold mb-2">1 Hour</div>
              <p class="text-blue-100">Text Response Time</p>
            </div>
            <div>
              <div class="text-3xl font-bold mb-2">2 Hours</div>
              <p class="text-blue-100">Emergency Deployment</p>
            </div>
            <div>
              <div class="text-3xl font-bold mb-2">24/7</div>
              <p class="text-blue-100">Phone Support</p>
            </div>
          </div>
        </div>

        <!-- Service Areas -->
        <div class="mt-12">
          <h2 class="text-2xl font-bold mb-6 text-center">Service Areas</h2>
          <div class="bg-white rounded-lg shadow-lg p-8">
            <div class="grid md:grid-cols-4 gap-4">
              <div class="text-center">
                <h3 class="font-semibold text-lg mb-2">Pierce County</h3>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>Tacoma</li>
                  <li>Puyallup</li>
                  <li>Lakewood</li>
                  <li>Federal Way</li>
                </ul>
              </div>
              <div class="text-center">
                <h3 class="font-semibold text-lg mb-2">King County</h3>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>Seattle</li>
                  <li>Kent</li>
                  <li>Auburn</li>
                  <li>Renton</li>
                </ul>
              </div>
              <div class="text-center">
                <h3 class="font-semibold text-lg mb-2">Thurston County</h3>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>Olympia</li>
                  <li>Lacey</li>
                  <li>Tumwater</li>
                </ul>
              </div>
              <div class="text-center">
                <h3 class="font-semibold text-lg mb-2">Kitsap County</h3>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>Bremerton</li>
                  <li>Port Orchard</li>
                  <li>Silverdale</li>
                </ul>
              </div>
            </div>
            <div class="mt-6 text-center">
              <p class="text-sm text-gray-600">
                <span class="font-semibold">Free Delivery:</span> Within 30 miles of Tacoma
              </p>
              <p class="text-sm text-gray-600 mt-1">
                <span class="font-semibold">Extended Areas:</span> Small delivery fee applies
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <CTASection 
      description="Don't wait for an incident. Get protection today."
      showQuote={false}
    />
  </main>

  <Footer />
  
</Layout>
