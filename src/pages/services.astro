---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Mobile Surveillance Trailer Rental Services",
  "description": "Professional mobile surveillance trailer services for construction sites, events, and temporary security needs with 24/7 monitoring and rapid deployment",
  "provider": {
    "@type": "LocalBusiness",
    "name": "CCTV Trailer",
    "telephone": "(253) 683-2288",
    "email": "info@cctvtrailer.com",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Tacoma",
      "addressRegion": "WA",
      "addressCountry": "US"
    }
  },
  "serviceType": ["Security Services", "Surveillance Services", "Equipment Rental"],
  "areaServed": [
    {
      "@type": "City",
      "name": "Tacoma"
    },
    {
      "@type": "City",
      "name": "Seattle"
    },
    {
      "@type": "City",
      "name": "Olympia"
    },
    {
      "@type": "City",
      "name": "Federal Way"
    },
    {
      "@type": "City",
      "name": "Puyallup"
    },
    {
      "@type": "City",
      "name": "Lakewood"
    },
    {
      "@type": "City",
      "name": "Kent"
    },
    {
      "@type": "City",
      "name": "Auburn"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Mobile Surveillance Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Short-Term Security Trailer Rental",
          "description": "Ideal for weekend events, festivals, construction site security, emergency response situations, and special events monitoring"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Long-Term Security Trailer Rental",
          "description": "Perfect for ongoing construction projects, seasonal business security, property development sites, and extended facility monitoring"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "24/7 Remote Monitoring",
          "description": "Continuous surveillance with real-time alerts and remote viewing capabilities"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Emergency Deployment",
          "description": "Rapid response deployment within 2 hours for urgent security needs"
        }
      }
    ]
  },
  "availableChannel": {
    "@type": "ServiceChannel",
    "serviceUrl": "https://www.cctvtrailer.com/contact",
    "servicePhone": "(253) 683-2288",
    "availableLanguage": ["English"]
  }
});
---

<Layout 
  title="Mobile Surveillance Trailer Services | CCTV Rental Tacoma"
  description="Professional mobile surveillance trailer services for construction sites, events, and temporary security needs. 24/7 monitoring, rapid deployment, and advanced S-VIDIA technology throughout Tacoma and Seattle."
  keywords="mobile surveillance services, security trailer rental services, construction site security, event security services, temporary CCTV rental, Tacoma security services"
  schema={schema}>
  <Header currentPath="/services" />

  <main>
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center mb-12">Our Services</h1>
        
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="border rounded-lg p-6">
            <h2 class="text-2xl font-semibold mb-4">Short-Term Rentals</h2>
            <ul class="space-y-2 text-gray-600">
              <li>• Weekend events and festivals</li>
              <li>• Construction site security</li>
              <li>• Emergency response situations</li>
              <li>• Special events monitoring</li>
            </ul>
          </div>
          
          <div class="border rounded-lg p-6">
            <h2 class="text-2xl font-semibold mb-4">Long-Term Rentals</h2>
            <ul class="space-y-2 text-gray-600">
              <li>• Ongoing construction projects</li>
              <li>• Seasonal business security</li>
              <li>• Property development sites</li>
              <li>• Extended facility monitoring</li>
            </ul>
          </div>
        </div>

        <div class="bg-gray-100 rounded-lg p-8">
          <h2 class="text-2xl font-semibold mb-4">Features Included</h2>
          <div class="grid md:grid-cols-2 gap-4">
            <div>• Advanced S-VIDIA video technology</div>
            <div>• Reinforced steel construction</div>
            <div>• Tow-capable up to 70 mph</div>
            <div>• Weather-resistant design</div>
            <div>• Quick setup (minutes)</div>
            <div>• 24/7 monitoring capability</div>
            <div>• No guards required</div>
            <div>• Mobile deployment anywhere</div>
          </div>
        </div>
        
        <div class="mt-12 text-center">
          <p class="text-gray-700 mb-6">Want to learn more about our trailer specifications and capabilities?</p>
          <a href="/trailer-technology" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg inline-block">
            View Technical Specifications →
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
